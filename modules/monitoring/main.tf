################################################################################
# Route53
################################################################################

resource "aws_route53_health_check" "route53" {
  fqdn              = "${var.fqdn}"
  port              = 80
  type              = "HTTP"
  resource_path     = "/"
  failure_threshold = 5
  request_interval  = 30

  tags = {
    Name = "route53-healthcheck"
  }
}

